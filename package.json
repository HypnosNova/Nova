{
	"name": "nova-three",
	"version": "0.1.5",
	"description": "JavaScript 3D framework based on Three.js",
	"main": "build/nova.js",
	"repository": "hypnosnova/nova.js",
	"jsnext:main": "build/nova.module.js",
	"module": "build/nova.module.js",
	"files": [
		"package.json",
		"bower.json",
		"LICENSE",
		"README.md",
		"build/nova.js",
		"build/nova.min.js",
		"build/nova.module.js",
		"src"
	],
	"directories": {
		"doc": "docs",
		"example": "examples",
		"test": "test"
	},
	"eslintConfig": {
		"extends": "mdcs"
	},
	"scripts": {
		"build": "rollup -c",
		"build-uglify": "rollup -c && uglifyjs build/nova.js -cm --preamble \"// threejs.org/license\" > build/nova.min.js",
		"dev": "concurrently --names \"ROLLUP,HTTP\" -c \"bgBlue.bold,bgGreen.bold\" \"rollup -c -w -m inline\" \"serve --port 8080\"",
		"start": "npm run dev",
		"lint": "eslint src"
	},
	"keywords": [
		"three",
		"three.js",
		"nova",
		"3d",
		"webgl"
	],
	"author": "HypnosNova",
	"license": "MIT",
	"dependencies": {
		"concurrently": "^3.5.0",
		"eslint": "^5.4.0",
		"eslint-config-mdcs": "^4.2.3",
		"lodash": "^4.17.10",
		"rollup": "^0.65.0",
		"rollup-watch": "^4.3.1",
		"serve": "^10.0.0",
		"uglify-js": "^3.4.8",
		"three": "^0.95.0"
	}
}